<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="1dp"
    android:layout_marginTop="30dp"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_profile_image"
        android:background="@drawable/empty_inviter"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"/>
        <ImageView
            android:layout_toRightOf="@+id/friend_profile_image"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="40dp"
            android:layout_width="20dp"
            android:id="@+id/selected_deselected"
            android:src="@drawable/tic_mark_selected"
            android:layout_height="20dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/friend_profile_image"
            android:id="@+id/friend_name"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
        </TextView>
</RelativeLayout>