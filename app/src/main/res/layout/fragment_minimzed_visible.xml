<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/active_room_shortcut"
        android:visibility="visible"
        android:background="@drawable/border_top_bottom_sheet"
        android:layout_alignParentBottom="true"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:id="@+id/title"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bottom_title"
            android:text="Event Title" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:id="@+id/author_image_in_shortcut_1"
            android:src="@drawable/empty_inviter"
            android:layout_height="30dp">
        </com.google.android.material.imageview.ShapeableImageView>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:id="@+id/author_image_in_shortcut_2"
            android:src="@drawable/empty_inviter"
            android:layout_height="30dp">
        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:background="@drawable/leave_room_circular_bg"
            android:layout_marginBottom="20dp"
            android:paddingTop="5dp"
            android:id="@+id/leave_quitely"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:text="✌🏽">
        </TextView>
        <TextView
            android:layout_marginRight="160dp"
            android:background="@drawable/raise_hand_without_notification"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            android:id="@+id/hand_raise_audience_admin"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:background="@drawable/mic_on_room_view"
            android:visibility="visible"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/mute_unmute_button_bottom"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
</RelativeLayout>