<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neartagtheme"
    android:orientation="vertical">

    <TextView
        android:id="@+id/desc_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Your profile is almost done! Add"
        android:textAppearance="@style/OnboardingTop" />

    <TextView
        android:id="@+id/desc_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_1"
        android:layout_marginTop="0dp"
        android:gravity="center_horizontal"
        android:text="your brief bio now"
        android:textAppearance="@style/OnboardingTop" />

    <EditText
        android:id="@+id/edit_display_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc_2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/main_screen_no_ask"
        android:focusable="true"
        android:gravity="center"
        android:lines="8"
        android:minLines="6"
        android:textColorHint="@color/texthintcolor"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_display_bio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/next_disabled" />
    <ProgressBar
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/busy_send_photo"/>
</RelativeLayout>
