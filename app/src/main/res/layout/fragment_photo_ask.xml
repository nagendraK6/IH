<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neartagtheme"
    android:orientation="vertical">
    <!-- Form-fields -->
    <!-- Great choice, lets add a photo now -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout1">
        <include layout="@layout/snippet_app_skip_header"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/great_choic"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:text="Great choice, lets add a photo now"
        android:textSize="16dp"
        android:gravity="center_horizontal|center_vertical"
        />
    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/form_fields"
        android:layout_below="@+id/great_choic"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/form_fields"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profile_image_view"
        android:layout_below="@+id/great_choic"
        android:visibility="invisible"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/next_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="108dp"
        android:background="@drawable/next_disabled"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="17dp"
        android:paddingRight="34dp"
        android:layout_alignParentBottom="true"

        android:gravity="center_horizontal" />


    <ProgressBar
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/busy_send_photo"/>
</RelativeLayout>
