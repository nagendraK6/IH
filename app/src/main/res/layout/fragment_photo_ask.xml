<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neartagtheme"
    android:orientation="vertical">
    <!-- Form-fields -->
    <!-- Great choice, lets add a photo now -->


    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/snippet_app_skip_header" />
    </RelativeLayout>

    <TextView
        android:id="@+id/great_choic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relLayout1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="84dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Great choice, lets add a photo now"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/form_fields"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@+id/great_choic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_fields" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_view"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@+id/great_choic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/next_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/form_fields"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="252dp"
        android:background="@drawable/next_disabled"
        android:gravity="center_horizontal"
        android:paddingLeft="17dp"

        android:paddingTop="12dp"
        android:paddingRight="34dp"
        android:paddingBottom="12dp" />


    <ProgressBar
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/busy_send_photo"/>
</RelativeLayout>
