<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neartagtheme"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical">
    <ProgressBar
        android:id="@+id/loading_channel_token_fetch8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:indeterminateTint="@color/instahelo_blue"
        android:indeterminateTintMode="src_atop"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/new_room_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:textColor="@color/neartagtextcolor"
        android:textSize="17sp"
        android:visibility="invisible"
        android:text="Congrats, your event is setup !"/>


    <TextView
        android:id="@+id/speaker_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_schedule"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="55dp"
        android:textAlignment="center"
        android:textColor="@color/neartagtextcolor"
        android:textSize="17sp" />



    <TextView
        android:id="@+id/schdeule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="50dp"
        android:textAlignment="center"
        android:textColor="@color/neartagtextcolor"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/schdeule_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="@color/neartagtextcolor"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/time_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_schedule"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="@color/neartagtextcolor"
        android:textSize="17sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_centerHorizontal="true"
        android:id="@+id/speaker_grid_list"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/speaker_list"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="180dp"
        android:layout_marginEnd="20dp" />

    <LinearLayout
        android:id="@+id/sharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_disclaimer"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/wa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/wa" />
        <ImageView
            android:id="@+id/twitter"
            android:layout_marginTop="-5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/twitter" />
        <ImageView
            android:id="@+id/fb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/fb" />

        <ImageView
            android:id="@+id/copy_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/copy_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/bottom_disclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:text="@string/schedule_text"
        android:textAlignment="center"
        android:textColor="@color/neartagtextcolor"
        android:textSize="17sp" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:id="@+id/go_to_all_rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/go_to_all_rooms" />

    <TextView
        android:id="@+id/add_to_calendar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sharing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:text="Add to calendar" />


</RelativeLayout>