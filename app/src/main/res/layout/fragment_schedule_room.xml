        android:layout_marginEnd="55dp"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/back_button_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/left_move_button" />

    <TextView
        android:id="@+id/all_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/back_button_schedule"
        android:layout_alignBottom="@+id/back_button_schedule"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/back_button_schedule"
        android:gravity="center"
        android:text="@string/all_room" />

    <TextView
        android:id="@+id/schdeule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
