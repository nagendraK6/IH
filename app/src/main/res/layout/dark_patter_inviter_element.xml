<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/neartagtheme"
    android:focusable="true"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/blank_profile_image"
        android:layout_margin="10dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:textAlignment="center"
        android:textColor="@color/neartagtextcolor"
        android:text="A"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:background="@drawable/img_oval"/>

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/blank_profile_image"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/blank_profile_image"
        android:text="TextView"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="88dp"
        android:layout_toEndOf="@+id/blank_profile_image"
        android:text="TextView" />


    <ImageView
        android:layout_width="25dp"
        android:src="@drawable/tic_mark_selected"
        android:id="@+id/tic_mark_selected_deselected"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_height="25dp">
    </ImageView>


</RelativeLayout>
